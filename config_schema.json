        "80",
        "85",
        "90",
        "95",
        "100"
      ]
    },
    "numeric_string": {
      "type": "string",
      "pattern": "^\\d+"
    }
  },
  "properties": {
    "buildings": {
      "type": "object",
      "patternProperties": {
        "": {
          "type": "object",
          "description": "Building Attributes",
          "properties": {
            "cost": {
              "type": "array",
              "maxItems": 5,
              "minItems": 5,
              "items": {
                "$ref": "#/$defs/numeric_string"
              }
            },
            "health": {
              "$ref": "#/$defs/numeric_string"
            },
            "population": {
              "$ref": "#/$defs/numeric_string"
            }
          }
        }
      },
      "propertyNames": {
        "$ref": "#/$defs/building_name"
      }
    },
    "resources": {
      "type": "object",
      "patternProperties": {
        "": {
          "type": "object",
          "properties": {
            "buy": {
              "$ref": "#/$defs/numeric_string"
            },
            "sell": {
              "$ref": "#/$defs/numeric_string"
            }
          }
        }
      },
      "propertyNames": {
        "$ref": "#/$defs/resource_name"
      }
    },
    "units": {
      "type": "object",
      "patternProperties": {
        "": {
          "type": "object",
          "properties": {
            "health": {
              "$ref": "#/$defs/numeric_string"
            },
            "arrowDamage": {
              "$ref": "#/$defs/numeric_string"
            },
            "xbowDamage": {
              "$ref": "#/$defs/numeric_string"
            },
            "stoneDamage": {
              "$ref": "#/$defs/numeric_string"
            },
            "meleeDamageVs": {
              "type": "object",
              "patternProperties": {
                "": {
                  "$ref": "#/$defs/numeric_string"
                }
              },
              "propertyNames": {
                "$ref": "#/$defs/unit_name"
              }
            }
          }
        }
      },
      "propertyNames": {
        "$ref": "#/$defs/unit_name"
      }
    },
    "other": {
      "type": "array",
      "description": "Custom change format; address, type, value required for each entry.",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "size": {
            "type": "integer"
          },
          "value": {
            "type": "integer"
          }
        },
        "required": [
          "address",
          "size",
          "value"
        ]
      }
    },
    "special": {
      "type": "object",
      "properties": {
        "tax_reset": {
          "type": "object",
          "description": "Automatic tax reset when popularity is 0, tax level is set to specified value.",
          "properties": {
            "value": {
              "type": "integer"
            }
          }
        },
        "custom_taxation": {
          "type": "object",
          "description": "List of taxation values. All taxation values must be a multiple of 0.05 in string format. Must contain one entry with exact value of \"0.00\" Note: You still need to explicitly set the zero-taxation level related addresses in the other section!",
          "properties": {
            "table": {
              "type": "array",
              "maxItems": 12,
              "minItems": 12,
              "items": {
                "type": "string",
                "pattern": "\\d\\.\\d[05]"
              },
              "contains": {
                "const": "0.00"
              }
            }
          }
        },
        "assassin_rally_speed": {
          "type": "object",
          "description": "Assassin speed when moving with the rally point from mercenary post",
          "properties": {
            "value": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}